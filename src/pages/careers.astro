---
import InteriorHero from "../components/InteriorHero.astro";
import DefaultLayout from "../layouts/Default.astro";
---

<DefaultLayout>
  <InteriorHero>
    <p
      class="uppercase font-extrabold text-center text-zinc-500 tracking-wider"
    >
      Join the team
    </p>
    <h1 class="font-heading font-black text-7xl text-center mt-4">
      We are Hiring!
    </h1>
    <p class="text-center text-2xl mt-6 max-w-xl mx-auto text-zinc-400">
      We are always looking for talented individuals passionate about building
      blockchain products that makes a difference.
    </p>
  </InteriorHero>
</DefaultLayout>
