---
import { getCollection } from "astro:content";
import { CutCornerButton } from "../../components/CutCornerButton";
import { Hexagon } from "../../components/Hexagon";
import DefaultLayout from "../../layouts/Default.astro";
import { HeaderSection } from "../../sections/Header";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const latestPost = posts[0];
---

<DefaultLayout>
  <HeaderSection client:load />
  <section class="py-60 relative overflow-x-clip">
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <Hexagon size={800} client:load duration={30} />
    </div>
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <Hexagon size={1200} client:load reverse duration={50} />
    </div>
    <div class="container">
      <div class="max-w-3xl mx-auto">
        {/* Hero Section */}
        <p
          class="uppercase font-extrabold text-center text-zinc-500 tracking-wider"
        >
          Latest Post
        </p>
        <h1 class="font-heading font-black text-7xl text-center mt-4">
          {latestPost.data.title}
        </h1>
        <p class="text-center text-2xl mt-6 text-zinc-400 max-w-xl mx-auto">
          {latestPost.data.description}
        </p>
        <div class="flex justify-center mt-10">
          <a href={`/blog/${latestPost.slug}`}>
            <CutCornerButton>Read More</CutCornerButton>
          </a>
        </div>
      </div>
    </div>
  </section>

  <div>
    {/* Blog posts */}
  </div>
</DefaultLayout>
